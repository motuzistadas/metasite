{% extends "::base.html.twig" %}

{% block title %}AppBundle:Categories:categories{% endblock %}

{% block body %}
<div class="panel panel-info">
	<div class="panel-heading">
		<h3 class="text-center">Categories</h3>
	</div>
	<table class="table table-striped">
		<tr>
			<th class="text-center">Category</th>
			<th class="text-center">Actions</th>
		</tr>
		{% for key in viewCatDets %}
		<tr>
			<td class="text-center">{{ key.name }}</td>
			<td class="text-center">
				<a
	                href="{{ path('admin_groups_delete', {id: key.id, token: csrf_token('administration')}) }}"
	                class="requires-confirmation btn btn-danger btn-sm">Delete
	            </a>
			</td>
		</tr>
		{% endfor %}
	</table>
	<div class="panel-heading">
		<h3 class="text-center">Add a new category</h3>
	</div>
	<div class="panel-body">
		{{ form(form) }}
	</div>
</div>
{% endblock %}
