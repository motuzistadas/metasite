{% extends "::base.html.twig" %}

{% block title %}AppBundle:List:List{% endblock %}

{% block body %}
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3 class="text-center">Subscribers</h3>
		</div>
		<div class="panel-body">
			<table class="table table-striped">
				<tr>
					<th class="text-center">Subscriber</th>
					<th class="text-center">Email</th>
					<th class="text-center">Categories</th>
					<th class="text-center">Reg. Date </th>
					<th class="text-center">Actions</th>
				</tr>
				{% for key in list %}
				<tr>
					<td class="text-center">{{ key[1] }}</td>
					<td class="text-center">{{ key[2] }}</td>
					<td class="text-center">
						{% for cat in key[3] %}
						{% if cat %}
						<p class="btn-xs btn-info">{{ cat }}</p>
						{% endif %}
						{% endfor %}
					</td>
					<td class="text-center">{{ key[4] }}</td>
					<td class="text-center">
						<a
			                href="{{ path('admin_subscriber_edit', {id: key[0], token: csrf_token('administration')}) }}"
			                class="requires-confirmation btn btn-warning btn-sm">Edit
			            </a>
						<a
			                href="{{ path('admin_subscriber_delete', {id: key[0], token: csrf_token('administration')}) }}"
			                class="requires-confirmation btn btn-danger btn-sm">Delete
			            </a>
					</td>
				</tr>
				{% endfor %}
			</table>
		</div>
	</div>
{% endblock %}
